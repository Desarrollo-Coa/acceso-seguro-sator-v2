                                tecnomecanica_fin: vehiculo.tecnomecanica_fin,
                                licencia_conduccion: vehiculo.licencia_conduccion,
                                licencia_transito: vehiculo.licencia_transito,
                                estado_soat: vehiculo.estado_soat,
