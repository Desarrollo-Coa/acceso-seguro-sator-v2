// Inicializar contadores al cargar la página
async function initializeUnreadCounters() {
  try {
    // Obtener todos los IDs de solicitudes que tenemos en la página
    const solicitudIds = Array.from(
      document.querySelectorAll('.solicitud-id')
    ).map(el => el.textContent.trim());
    
    console.log("[Contratista] Inicializando contadores para solicitudes:", solicitudIds);
    
