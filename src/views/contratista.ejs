// Función mejorada para notificar nuevos mensajes
function notifyNewMessage(message) {
  // No notificar mensajes propios
  if (parseInt(message.userId) === parseInt(getUserId())) {
    return;
  }
  
  // Actualizar el contador siempre
  updateUnreadCounter(message.solicitudId, message.type);
  
  // Solo mostrar notificación si el modal está cerrado o estamos en otra pestaña
  const chatModalVisible = !document.getElementById('chatModal').classList.contains('hidden');
  const isCurrentChat = chatModalVisible && 
                       currentSolicitudId === message.solicitudId && 
                       currentChatType === message.type;
  
  // Si el chat está abierto y es el actual, no notificar
  if (isCurrentChat) {
    return;
  }
  
  // Verificar si las notificaciones están soportadas y permitidas
  if (!("Notification" in window)) {
    console.log("Este navegador no soporta notificaciones");
    return;
  }
  
  if (Notification.permission === "granted") {
    const sender = message.type === 'sst' ? 'SST' : 'Interventor';
    const notification = new Notification(`Nuevo mensaje de ${sender}`, {
      body: message.content,
      icon: '/img/logo.png',
      tag: `chat-${message.solicitudId}-${message.type}` // Evitar duplicados
    });
    
    notification.onclick = function() {
      window.focus();
      openChatWindow(message.solicitudId);
      loadChat(message.type);
    };
  }
}

// Función para actualizar contador global
function updateGlobalUnreadCounters() {
  // Obtener todos los contadores de mensajes no leídos
  const sstBadge = document.getElementById('unread-count-sst');
  const interventorBadge = document.getElementById('unread-count-interventor');
  
  // Sumar los contadores
  const totalUnread = (parseInt(sstBadge.textContent || '0') || 0) + (parseInt(interventorBadge.textContent || '0') || 0);
  
  // Actualizar el contador global
  document.getElementById('unread-count-all').textContent = totalUnread;
}
