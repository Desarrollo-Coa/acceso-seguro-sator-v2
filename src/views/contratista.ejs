// Función para crear elemento de mensaje (reutilizable)
function createMessageElement(message) {
  // Obtener el ID del usuario contratista
  const userId = getUserId();
  
  // Determinar explícitamente si el mensaje fue enviado por el usuario actual
  const isSender = parseInt(message.usuario_id) === parseInt(userId);
  
  console.log(`Creando elemento para mensaje. Usuario del mensaje: ${message.usuario_id}, Mi ID: ${userId}, isSender: ${isSender}`);
  
  const messageDiv = document.createElement('div');
  
  // El estilo se basa en si el mensaje fue enviado por el usuario actual
  messageDiv.className = `p-2 my-1 rounded-md ${isSender ? 
    'bg-ga-gold text-ga-white ml-auto' : 
    'bg-gray-200 text-gray-800'} max-w-xs`;
  
  // Manejar diferentes formatos de mensaje
  let messageContent = '';
  if (typeof message.content === 'string') {
    try {
      // Intentar analizar si es un JSON
      const jsonContent = JSON.parse(message.content);
      messageContent = jsonContent.text || jsonContent.value || JSON.stringify(jsonContent);
    } catch (e) {
      // Si no es un JSON válido, usar el string directamente
      messageContent = message.content;
    }
  } else if (message.content && message.content.text) {
    messageContent = message.content.text;
  } else if (message.content && message.content.value) {
    messageContent = message.content.value;
  } else if (message.content) {
    messageContent = message.content.toString();
  } else {
    messageContent = "Mensaje sin contenido";
  }
  
  // Agregar tiempo del mensaje
  const timestamp = new Date(message.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
  
  // Usar estructura con tiempo del mensaje
  messageDiv.innerHTML = `
    <div>${messageContent}</div>
    <div class="text-xs mt-1 text-right ${message.isSender ? 'text-gray-300' : 'text-gray-500'}">${timestamp}</div>
  `;
  
  // Almacenar información del mensaje para futuras referencias
  messageDiv.dataset.messageId = message.id;
  messageDiv.dataset.userId = message.usuario_id;
  messageDiv.dataset.isSender = message.isSender;
  
  // Añadir atributo de ID del mensaje para poder identificarlo
  if (message.id) {
    messageDiv.setAttribute('data-message-id', message.id);
  }
  
  return messageDiv;
}

