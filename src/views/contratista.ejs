// Actualizar un contador específico de mensajes no leídos
async function updateUnreadCounter(solicitudId, type) {
  try {
    // Si el chat actualmente visible es del mismo tipo que el mensaje recibido,
    // no incrementamos el contador (no tiene sentido mostrar notificaciones de un chat abierto)
    if (currentSolicitudId === solicitudId && currentChatType === type) {
      console.log(`Chat ${type} actualmente visible, no incrementar contador`);
      return;
    }
    
    // Obtener el ID del usuario contratista
    const userId = getUserId();
    
    // Añadir log para depuración
    console.log(`[Contratista] Actualizando contador para chat ${type}, solicitud ${solicitudId}, usuario ${userId}`);
    
    const response = await fetch(`/api/chat/${solicitudId}/${type}/unread?userId=${userId}`);
    if (!response.ok) {
      throw new Error('Error al obtener contador de mensajes no leídos');
    }
    
    const data = await response.json();
    console.log(`[Contratista] Respuesta del servidor para contador: ${JSON.stringify(data)}`);
    
    const badge = document.querySelector(`.unread-count[data-type="${type}"]`);
    if (badge) {
      badge.textContent = data.unreadCount;
      // Solo mostrar el contador si hay mensajes no leídos
      if (data.unreadCount > 0) {
        badge.classList.remove('hidden');
      } else {
        badge.classList.add('hidden');
      }
    }
  } catch (error) {
    console.error(`Error al actualizar contador para ${type}:`, error);
  }
}

